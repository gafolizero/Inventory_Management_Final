extends base

block content
  main.main.main-login
    section.login
      h2.heading-secondary.ma-bt-lg.formTitle Log into your account
      form.form.form-login
        .arrange
          .form__group.input
            label(for='email') Email address
            input#email(type='email', placeholder='you@example.com', required)
          .form__group.ma-bt-md.input
            label(for='password') Password
            input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
          .form__group.input
            button.btn.btn--green.login-btn Login
